<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/sdk_crowdtest_title_blue" />
            <solid android:color="#22000000" />
            <corners android:radius="@dimen/sdk_crowdtest_button_corner" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/sdk_crowdtest_title_blue" />
            <solid android:color="@color/sdk_crowdtest_color_white" />
            <corners android:radius="@dimen/sdk_crowdtest_button_corner" />
        </shape>
    </item>
    <item android:state_window_focused="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/sdk_crowdtest_title_blue" />
            <solid android:color="@color/sdk_crowdtest_color_white" />
            <corners android:radius="@dimen/sdk_crowdtest_button_corner" />
        </shape>
    </item>
</selector>
